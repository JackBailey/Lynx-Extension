{
    "manifest_version": 3,
    "name": "Lynx Shortener",
    "version": "0.1",
    "author": "Jack Bailey",
    "description": "A companion extension for use with the Lynx URL Shortener",
    "permissions": [
        "storage",
        "contextMenus",
        "notifications",
        "clipboardWrite",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "assets/favicon-16x16.png",
        "32": "assets/favicon-32x32.png",
        "128": "assets/favicon-128x128.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["assets/icons/pencil-solid.svg", "assets/icons/trash-can-solid.svg"],
            "matches": ["<all_urls>"]
        }
    ]
}